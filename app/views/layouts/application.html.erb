<!DOCTYPE html>
<html>
<head>
  <title>Newfb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		  <% if session[:user_id].present? %>
		    <p>Welcome back, <%= current_user.email %>. <%= link_to "Sign Out", session_url, method: 'delete' %></p>
		  <% else %>
		    <p><%= link_to "Sign Up", new_user_url %> or <%= link_to "Sign In", new_session_url %></p>
		  <% end %>

		  <p><%= notice %></p>
	 
		</nav>

<%= yield %>

</body>
</html>
